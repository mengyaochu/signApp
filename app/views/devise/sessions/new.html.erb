
<%= devise_error_messages! %>
<div class="span-8">&nbsp;</div>
<div class="span-8 column last">
<fieldset>
   <legend>
     <%= link_to "Login" , '#' , :id => 'login' , :remote => true %>
    | <%= link_to "Sign up" , new_user_registration_path , :id => 'sign-up'  %>
   </legend>
   <div id='show-login'>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'text' %>

      <%= f.label :password %>
      <%= f.password_field :password , :class => 'text' %>

      <% if devise_mapping.rememberable? -%>
       <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <div style="padding: 5px;"></div>
      <div class="span-8">
       <div class="span-3 colborder">
       <p class="buttons">
        <%= f.submit "login" , :id => 'login-button', :class => 'button positive' %>
       </p>
      </div>
      </div>
    <% end %>
   <%= render "links" %>
 </div>
</fieldset>
</div>

