        window.location.replace("/gamings/new");
     }

     if (type == 'Living'){
       window.location.replace("/livings/new");
     }

     if (type == 'Room'){
       window.location.replace("/rooms/new");
     }

     if (type == 'Travel'){
       window.location.replace("/travels/new");
     }

     if (type == 'Others'){
       window.location.replace("/others/new");
     }

     if (type == 'Banquet'){
