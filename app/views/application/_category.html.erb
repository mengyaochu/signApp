     <%=  select_tag "type", options_for_select(Site::CATEGORY) , {:prompt => 'Select Category'}  %>
   <% end %>
  </p>

</div>


<script>

$(document).ready(function(){
  $('#type').change(function(){
     var type = $('#type').val();
     if (type == 'Book'){
       window.location.replace("/books/new");
     }
     if (type == 'Vehicle'){
       window.location.replace("/vehicles/new");
     }

